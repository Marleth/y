<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_principal"
    tools:context="com.gtm.itinerario.principalActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="1">


            <TextView
                android:id="@+id/nombre_coche"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:maxLines="1"
                android:padding="16dp"
                android:height="48dp"
                android:gravity="center"
                android:text="REVISION"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"/>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:id="@+id/imageButton2"
                        android:src="@drawable/vehiculars"
                        android:background="@drawable/edittext"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Documentacion"
                            android:id="@+id/textView33"
                            android:layout_column="0"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="18sp"
                            android:textColor="#FFFF"
                            android:textSize="15sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:id="@+id/imageButton"
                        android:src="@drawable/documentacio"
                        android:background="@drawable/edittext"
                        android:layout_marginLeft="2.5dp"
                        android:layout_gravity="center"
                        android:layout_column="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vehicular"
                            android:id="@+id/textView34"
                            android:layout_column="1"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="18sp"
                            android:textColor="#FFFF"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:id="@+id/imageButton4"
                        android:src="@drawable/vehi"
                        android:background="@drawable/edittext"
                        android:layout_column="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carga"
                            android:id="@+id/textView35"
                            android:layout_column="0"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="18sp"
                            android:textColor="#FFFF"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal">
                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="130dp"
                        android:id="@+id/imageButton3"
                        android:src="@drawable/ic_dinero"
                        android:background="@drawable/edittext"
                        android:layout_column="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viaticos"
                            android:id="@+id/textView36"
                            android:layout_column="1"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="18sp"
                            android:textColor="#FFFF"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                </TableRow>

            </TableLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TERMINAR"
                android:id="@+id/fianl"
                android:layout_gravity="center_horizontal" />




        </LinearLayout>
    </ScrollView>

</RelativeLayout>
