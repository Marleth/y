<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gtm.itinerario.vehiculos"
    tools:showIn="@layout/activity_vehiculos">

    <ScrollView
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vehiculo"
                android:id="@+id/textView18"
                android:layout_above="@+id/email_login_form"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                />

            <ImageView
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/doc_vehi"
                android:background="@drawable/edittext"
                />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tarjeta de circulacion"
                android:id="@+id/circu"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:checked="true"
                android:textOn="Si"
               android:textOff="No"
                />




            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:id="@+id/circula">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                           android:text="Placas"
                        android:id="@+id/placas_s"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:layout_width="338dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/edplacas" />

                </LinearLayout>

            </RelativeLayout>
        <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Poliza de seguro"
                android:id="@+id/switch11"
                android:checked="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textOn="Si"
                android:textOff="No"
               />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/poli"
                android:layout_weight="2.08">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:text="Nº de poliza"
                        android:id="@+id/textView20"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText9"
                        android:layout_below="@+id/textView21"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textSize="20sp" />



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                          android:text="Compañia"
                        android:id="@+id/textView21"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText10"
                        android:layout_below="@+id/textView21"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:text="Expedicion"
                        android:id="@+id/textView9"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/editText2"
                        android:layout_alignParentLeft="true"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/exp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/txtnum"
                        android:layout_alignParentLeft="true"
                        android:cursorVisible="false"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:text="Vencimiento"
                        android:id="@+id/textView10"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView9"
                        />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:ems="10"
                        android:id="@+id/ven"
                        android:layout_below="@+id/textView10"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:cursorVisible="false"/>



                </LinearLayout>

            </RelativeLayout>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certificado de bajo emision de contaminantes"
                android:id="@+id/switch12"
                android:layout_below="@+id/textView22"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.42"
                android:textOn="Si"
                android:textOff="No"
                android:checked="true"
                 />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Certificado de condicion fisicomecanico"
                android:id="@+id/switch13"
                android:layout_below="@+id/textView22"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.42"
                android:textOn="Si"
                android:textOff="No"
                android:checked="true"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ENVIAR NIFORMACION"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:id="@+id/button7"
                android:layout_below="@+id/email_login_form"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
